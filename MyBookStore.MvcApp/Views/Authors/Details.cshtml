</div>
<div class="d-flex flex-nowrap">
    <a asp-action="Edit"
       asp-route-id="@Model.Id"
       class="btn btn-outline-dark m-1">
        <i class="bi bi-pencil"></i>
    </a>
    <a asp-action="Delete"
       asp-route-id="@Model.Id"
       class="btn btn-outline-dark m-1">
        <i class="bi bi-x-lg"></i>
    </a>
    <a asp-action="Index"
       class="btn btn-outline-dark m-1">
        Назад
    </a>
</div>