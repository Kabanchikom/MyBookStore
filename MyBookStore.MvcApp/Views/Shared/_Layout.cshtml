@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MyBookStore.MvcApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/comments.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MyBookStore.MvcApp.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        /* Stackoverflow preview fix, please ignore */
        .navbar-nav {
          flex-direction: row;
        }
        
        .nav-link {
          padding-right: .5rem !important;
          padding-left: .5rem !important;
        }
        
        /* Fixes dropdown menus placed on the right side */
        .ml-auto .dropdown-menu {
          left: auto !important;
          right: 0px;
        }
      </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="BookStore" asp-action="List">
                <span><i class="bi bi-book"></i> Мой книжный</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="BookStore" asp-action="List">Каталог</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="BookStore" asp-action="Privacy">О нас</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Администрирование
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="Books" asp-action="Index">Книги</a>
                            <a class="dropdown-item" asp-controller="Authors" asp-action="Index">Авторы</a>
                            <a class="dropdown-item" asp-controller="BookTypes" asp-action="Index">Типы издания</a>
                            <a class="dropdown-item" asp-controller="Genres" asp-action="Index">Жанры</a>
                            <a class="dropdown-item" asp-controller="Manufacturers" asp-action="Index">Издатели</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Orders" asp-action="Index">Заказы</a>
                        </div>
                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <ul class="nav navbar-nav ml-5">
                                <li class="dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span>
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <strong>@User.Identity.Name</strong>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Личный кабинет</a>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Выход</a>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Вход</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
