</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - MyBookStore.MvcApp - <a asp-area="" asp-controller="BookStore" asp-action="Privacy">Privacy</a>
    </div>
