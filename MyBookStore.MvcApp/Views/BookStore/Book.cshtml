@using MyBookStore.MvcApp.Infrastructure
@model Book

<section class="py-6">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-5 gx-lg-5 align-items-start">
            <div class="col-md-4">
                <img class="card-img-top mb-5 mb-md-0 " src="@Model.ImagePath" alt="@Model.ImagePath"/>
            </div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Title</h1>
                <div class="fs-5 mb-1">
                    @String.Join(", ", Model
                        .Authors
                        .Select(x => x.ToString())
                        .ToArray())
                </div>
                <div class="fs-5 mb-2">
                    <span>@Model.Price.ToString("C")
                        @if (Model.IsOnSale)
                        {
                            <div class="badge bg-dark text-white" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        }
                    </span>
                </div>
                <div class="d-flex text-warning mb-5 h4">
                    @for (int i = 0; i < Math.Round(Model.Rating); i++)
                    {
                        <div class="bi-star-fill"></div>
                    }
                </div>
                <p class="lead">@Model.Description</p>
                <div class="d-flex">
                    <form id="@Model.Id"
                          asp-action="AddToCart"
                          asp-controller="Cart"
                          method="post">
                        <input type="hidden" name="bookId" asp-for="Id"/>
                        <div class="input-group mb-3">
                            <input type="hidden" name="returnUrl"
                                   value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                            <input class="form-control text-center me-3" name="quantity" type="num" value="1" style="max-width: 3rem"/>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-outline-dark mt-auto" href="#">
                                    В корзину
                                    <i class="bi-cart-fill me-1"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
