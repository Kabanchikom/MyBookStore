@using MyBookStore.MvcApp.Infrastructure
@model Book

<div class="card h-10 w-10 zoom-115">
    <!-- Sale badge-->
    @if (Model.IsOnSale)
    {
        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
    }
    <!-- Product image-->
    <img class="card-img-top" src="@Model.ImagePath" alt="@Model.ImagePath"/>
    <!-- Product details-->
    <div class="card-body p-4">
        <div class="text-center">
            <!-- Product name-->
            <h5 class="fw-bolder">
                <a class="link-dark"
                   asp-controller="BookStore"
                   asp-action="Book"
                   asp-route-bookId="@Model.Id">
                    @Model.Title
                </a>
            </h5>
            <div>
                @foreach (var author in Model.Authors)
                {
                    @author.Initials<br/>
                }
            </div>
            <!-- Product reviews-->
            <div class="d-flex justify-content-center small text-warning mb-2">
                @for (int i = 0; i < Math.Round(Model.Rating); i++)
                {
                    <div class="bi-star-fill"></div>
                }
            </div>
            <!-- Product price-->
            <span class="text-muted text-decoration-line-through"></span>
            @Model.Price.ToString("C")
        </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center">
            <form id="@Model.Id"
                  asp-action="AddToCart"
                  asp-controller="Cart"
                  method="post">
                <input type="hidden" name="bookId" asp-for="Id"/>
                <input type="hidden" name="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                <button type="submit" class="btn btn-outline-dark mt-auto" href="#">
                    В корзину
                    <i class="bi-cart-fill me-1"></i>
                </button>
            </form>
        </div>
    </div>
</div>